<div data-controller="notifications" class="z-40 pointer-events-none fixed inset-0 flex items-end px-4 py-6 sm:items-start sm:p-6 sm:top-16">
  <div class="flex w-full flex-col items-center space-y-4 sm:items-end">
    <% flash.each do |name, message| %>
      <%= render "shared/banner", name: name, message: message %>
    <% end %>
    <% flash.clear %>
  </div>
</div>
