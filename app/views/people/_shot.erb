<% bean_weight = shot.bean_weight.to_f %>
<% drink_weight = shot.drink_weight.to_f %>
<% ratio = drink_weight / bean_weight %>
<% tds = shot.drink_tds.to_f %>
<% ey = shot.drink_ey.to_f %>
<% if shot.espresso_enjoyment.present? %>
  Enjoyment: <%= shot.espresso_enjoyment %>
  <br>
<% end %>
<% if shot.barista.present? %>
  Barista: <%= shot.barista %>
  <br>
<% end %>
<% if shot.bean_brand.present? %>
  Bean brand: <%= shot.bean_brand %>
  <br>
<% end %>
<% if shot.bean_type.present? %>
  Bean type: <%= shot.bean_type %>
  <br>
<% end %>
<% if bean_weight > 0 %>
  Bean weight: <%= shot.bean_weight %>g
  <br>
<% end %>
<% if drink_weight > 0 %>
  Drink weight: <%= shot.drink_weight %>g
  <br>
<% end %>
<% if bean_weight > 0 && drink_weight > 0 && ratio > 0 && ratio.finite? %>
  Ratio 1:<%= ratio.round(1) %>
  <br>
<% end %>
<% if bean_weight > 0 || drink_weight > 0 %>
  Duration: <%= shot.duration.round(1) %>s
  <br>
<% end %>
<% if tds > 0 %>
  TDS: <%= tds %>%
  <br>
<% end %>
<% if ey > 0 %>
  EY: <%= ey %>%
  <br>
<% end %>
