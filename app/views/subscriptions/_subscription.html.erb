<div id="<%= dom_id subscription %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">User:</strong>
    <%= subscription.user_id %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Stripe:</strong>
    <%= subscription.stripe_id %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Status:</strong>
    <%= subscription.status %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Interval:</strong>
    <%= subscription.interval %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Started at:</strong>
    <%= subscription.started_at %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Ended at:</strong>
    <%= subscription.ended_at %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Cancel at:</strong>
    <%= subscription.cancel_at %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium">Cancelled at:</strong>
    <%= subscription.cancelled_at %>
  </p>
  <% if action_name != "show" %>
    <%= link_to "Show this subscription", subscription, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this subscription", edit_subscription_path(subscription), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
