<% data_tabs_active_tab="border-emerald-500 text-emerald-600 dark:text-emerald-500" %>
<% data_tabs_inactive_tab="border-transparent text-stone-500 hover:text-stone-700 hover:border-stone-300 dark:hover:text-stone-400 dark:hover:border-stone-700" %>
<% data_tabs_active_icon="text-emerald-500 dark:text-emerald-500" %>
<% data_tabs_inactive_icon="text-stone-400 group-hover:text-stone-500" %>
<% selected = cookies["shots.selected_tab"].presence || "tab-upload" %>
<div data-controller="tabs" data-tabs-active-tab="<%= data_tabs_active_tab %>" data-tabs-inactive-tab="<%= data_tabs_inactive_tab %>" data-tabs-active-icon="<%= data_tabs_active_icon %>" data-tabs-inactive-icon="<%= data_tabs_inactive_icon %>">
  <div class="border-b border-stone-200">
    <nav class="-mb-px flex justify-center sm:justify-start space-x-8">
      <a href="#" class="<%= selected == "tab-upload" ? data_tabs_active_tab : data_tabs_inactive_tab %> group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm" data-tabs-target="tab" data-action="click->tabs#change">
        <svg class="<%= selected == "tab-upload" ? data_tabs_active_icon : data_tabs_inactive_icon %> -ml-0.5 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" data-tabs-target="icon">
          <path d="M10 8a3 3 0 100-6 3 3 0 000 6zM3.465 14.493a1.23 1.23 0 00.41 1.412A9.957 9.957 0 0010 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 00-13.074.003z" />
        </svg>
        <span>Upload</span>
      </a>
      <a href="#" class="<%= selected == "tab-enjoyment" ? data_tabs_active_tab : data_tabs_inactive_tab %> group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm" data-tabs-target="tab" data-action="click->tabs#change">
        <svg class="<%= selected == "tab-enjoyment" ? data_tabs_active_icon : data_tabs_inactive_icon %> -ml-0.5 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" data-tabs-target="icon">
          <path fill-rule="evenodd" d="M4 16.5v-13h-.25a.75.75 0 010-1.5h12.5a.75.75 0 010 1.5H16v13h.25a.75.75 0 010 1.5h-3.5a.75.75 0 01-.75-.75v-2.5a.75.75 0 00-.75-.75h-2.5a.75.75 0 00-.75.75v2.5a.75.75 0 01-.75.75h-3.5a.75.75 0 010-1.5H4zm3-11a.5.5 0 01.5-.5h1a.5.5 0 01.5.5v1a.5.5 0 01-.5.5h-1a.5.5 0 01-.5-.5v-1zM7.5 9a.5.5 0 00-.5.5v1a.5.5 0 00.5.5h1a.5.5 0 00.5-.5v-1a.5.5 0 00-.5-.5h-1zM11 5.5a.5.5 0 01.5-.5h1a.5.5 0 01.5.5v1a.5.5 0 01-.5.5h-1a.5.5 0 01-.5-.5v-1zm.5 3.5a.5.5 0 00-.5.5v1a.5.5 0 00.5.5h1a.5.5 0 00.5-.5v-1a.5.5 0 00-.5-.5h-1z" clip-rule="evenodd" />
        </svg>
        <span>Enjoyment</span>
      </a>
      <a href="#" class="<%= selected == "tab-coffees" ? data_tabs_active_tab : data_tabs_inactive_tab %> group inline-flex items-center py-4 px-1 border-b-2 font-medium text-sm" data-tabs-target="tab" data-action="click->tabs#change">
        <svg class="<%= selected == "tab-coffees" ? data_tabs_active_icon : data_tabs_inactive_icon %> -ml-0.5 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" data-tabs-target="icon">
          <path d="M7 8a3 3 0 100-6 3 3 0 000 6zM14.5 9a2.5 2.5 0 100-5 2.5 2.5 0 000 5zM1.615 16.428a1.224 1.224 0 01-.569-1.175 6.002 6.002 0 0111.908 0c.058.467-.172.92-.57 1.174A9.953 9.953 0 017 18a9.953 9.953 0 01-5.385-1.572zM14.5 16h-.106c.07-.297.088-.611.048-.933a7.47 7.47 0 00-1.588-3.755 4.502 4.502 0 015.874 2.636.818.818 0 01-.36.98A7.465 7.465 0 0114.5 16z" />
        </svg>
        <span>Recent</span>
      </a>
    </nav>
  </div>
  <div id="tab-upload" class="<%= selected == "tab-upload" ? "" : "hidden" %> overflow-hidden sm:rounded-b-lg" data-tabs-target="panel">
    <div class="px-4 py-5 sm:p-6">
      <%= render "upload" %>
    </div>
  </div>
  <div id="tab-enjoyment" class="<%= selected == "tab-enjoyment" ? "" : "hidden" %> overflow-hidden sm:rounded-b-lg" data-tabs-target="panel">
    <div class="px-4 py-5 sm:p-6">
      Historical Enjoyment Chart
    </div>
  </div>
  <div id="tab-coffees" class="<%= selected == "tab-coffees" ? "" : "hidden" %> overflow-hidden sm:rounded-b-lg" data-tabs-target="panel">
    <div class="px-4 py-5 sm:p-6">
      Last coffee/profile combo settings
    </div>
  </div>
</div>
