<% content_for(:html_title) { "Visualizer | Your Shots" } %>
<% turbo_refreshes_with method: :morph, scroll: :preserve %>
<% if @premium_count.to_i > 1 %>
  <%= render "shared/premium_banner", count: @premium_count %>
<% end %>
<div class="mx-auto mt-6 space-y-6 max-w-7xl sm:px-6 lg:px-8" data-controller="menu">
  <div class="flex items-baseline justify-between px-4 sm:hidden">
    <h1 class="font-serif text-4xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100">
      Your Shots
    </h1>
    <button type="button" class="text-neutral-900 dark:text-neutral-100" data-action="click->menu#toggle" data-menu-target="button">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 11-3 0m3 0a1.5 1.5 0 10-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-9.75 0h9.75" />
      </svg>
    </button>
  </div>
  <% if @shots.any? %>
    <%= render "filters" %>
    <div id="shots" class="divide-y sm:space-y-4 sm:divide-none dark:divide-neutral-800" data-controller="modal shot">
      <%= render "shared/modal" %>
      <%= render @shots %>
    </div>
    <%= render partial: "shared/cursor_loader", locals: { cursor: @cursor, path: shots_path(before: @cursor, format: :turbo_stream) } %>
  <% else %>
    <%= render "upload_form" %>
    <div class="px-6 my-8 text-center text-neutral-500 sm:px-8">
      <% if @premium_count.to_i > 1 %>
        Consider <%= link_to("upgrading", premium_index_path, class: "underline text-pink-600") %> to see your old shots.
      <% else %>
        No shots yet
      <% end %>
    </div>
  <% end %>
</div>
