doctype html
html
  head
    meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes, viewport-fit=cover"
    meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff"
    meta name="theme-color" media="(prefers-color-scheme: dark)" content="#000000"
    title = content_for?(:html_title) ? yield(:html_title) : "Visualizer"
    = yield :meta_tags
    = csrf_meta_tags
    = csp_meta_tag
    link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=4"
    link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=4"
    link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=4"
    link rel="manifest" href="/site.webmanifest?v=4"
    link rel="mask-icon" href="/safari-pinned-tab.svg?v=4" color="#000000"
    link rel="shortcut icon" href="/favicon.ico?v=4"
    = stylesheet_link_tag "tailwind", "prism", "inter-font", "data-turbo-track": "reload"
    = javascript_importmap_tags
  body.flex.flex-col.h-screen class=@skin
    header
      = render "shared/header"
    main.grow.dark:bg-black.dark:text-white
      = render "shared/flash"
      = yield
    footer
      = render "shared/footer"
