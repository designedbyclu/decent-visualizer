doctype html
html
  head
    meta content="width=device-width, initial-scale=1" name="viewport"
    title Decent Espresso Shot Visualizer
    = yield :meta_tags
    = csrf_meta_tags
    = csp_meta_tag
    link rel="icon" type="image/png" href="/favicon.ico?v=1"
    link rel="apple-touch-icon" href="/apple-touch-icon.png?v=1"
    link rel="icon" href="/favicon-32x32.png?v=1" sizes="32x32" type="image/png"
    link rel="icon" href="/favicon-16x16.png?v=1" sizes="16x16" type="image/png"
    link rel="manifest" href="/site.webmanifest"
    link rel="mask-icon" color="#000000" href="/safari-pinned-tab.svg?v=1"
    = stylesheet_link_tag "inter-font", "data-turbo-track": "reload"
    = stylesheet_link_tag "tailwind", "data-turbo-track": "reload"
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
  body.flex.flex-col.h-screen class=("dark" if current_user&.skin&.parameterize == "dsx")
    header
      = render "shared/header"
    main.flex-grow.dark:bg-black.dark:text-white
      = yield
    footer
      = render "shared/footer"
