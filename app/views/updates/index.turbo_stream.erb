<%= turbo_stream.append "updates" do %>
  <%= render @updates %>
<% end %>
<%= turbo_stream.replace "cursor" do %>
  <% if @cursor %>
    <%= turbo_frame_tag "cursor", src: updates_path(before: @cursor, format: :turbo_stream), loading: :lazy %>
  <% else %>
    <%= turbo_frame_tag "cursor" %>
  <% end %>
<% end %>
