<article class="mb-4 p-4 sm:p-6 ring-1 ring-zinc-900 ring-opacity-5 overflow-hidden bg-white dark:bg-zinc-900 max-w-3xl">
  <a href="<%= change_path(change.slug.presence || change.id) %>">
    <p class="text-sm text-zinc-500"><%= change.published_at.strftime('%B %-d, %Y') %></p>
    <h2 class="text-2xl mb-3 font-bold text-zinc-900 dark:text-zinc-100"><%= change.title %></h1>
  </a>
  <div>
    <%= markdown_text_from(change.body) %>
    <%= link_to "Edit", edit_change_path(change) if current_user&.admin %>
  </div>
</article>
