<article class="mb-4 p-4 sm:p-6 sm:rounded-lg ring-1 ring-stone-900 ring-opacity-5 overflow-hidden bg-white dark:bg-stone-900 max-w-3xl" id=<%= dom_id(change) %>>
  <a href="<%= change_path(change) %>">
    <h2 class="text-2xl mb-3 font-bold text-stone-900 dark:text-stone-100">
      <%= change.published_at.strftime('%B %-d, %Y') %>:
      <%= change.title %>
    </h2>
  </a>
  <div>
    <%= markdown_text_from(change.body) %>
    <%= link_to "Edit", edit_change_path(change) if current_user&.admin %>
  </div>
</article>
