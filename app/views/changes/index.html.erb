<% content_for(:html_title) { "Visualizer | Changelog" } %>
<div class="bg-white dark:bg-black border-b border-zinc-200 dark:border-zinc-800">
  <div class="max-w-prose mx-auto py-6 px-4 md:px-0">
    <h1 class="text-3xl font-bold leading-tight text-zinc-900 dark:text-zinc-100">Changelog</h1>
    <%= link_to "New", new_change_path if current_user&.admin %>
  </div>
</div>
<div class="py-4 bg-zinc-100 dark:bg-black sm:flex">
  <div class="grow hidden sm:block"></div>
  <div>
    <%= render @changes %>
    <%= render partial: "shared/pagination", locals: {pagy: @pagy, extra_classes: nil} %>
  </div>
  <div class="grow hidden sm:block"></div>
</div>
