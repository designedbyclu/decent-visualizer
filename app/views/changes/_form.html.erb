<div class=" mt-5 md:mt-0 md:col-span-2">
  <%= form_with(model: change) do |form| %>
    <div class="shadow sm:overflow-hidden" id=dom_id(change)>
      <div class="px-4 py-5 bg-white dark:bg-zinc-800 space-y-6 sm:p-6">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-3">
            <%= form.label :title, class: "standard-label" %>
            <%= form.text_field :title, class: "standard-input" %>
          </div>
          <div class="col-span-3">
            <%= form.label :published_at, class: "standard-label" %>
            <%= form.datetime_field :published_at, class: "standard-input" %>
          </div>
          <div class="col-span-6">
            <%= form.label :body, class: "standard-label" %>
            <div class="mt-1">
              <%= form.text_area :body, rows: 30, class: "shadow-sm font-mono focus:ring-emerald-500 focus:border-emerald-500 mt-1 block w-full sm:text-sm border-zinc-300 dark:bg-zinc-800" %>
            </div>
          </div>
          <div class="col-span-6" data-controller="character-counter">
            <%= form.label :excerpt, class: "standard-label" %>
            <div class="mt-1">
              <%= form.text_area :excerpt, rows: 5, maxlength: 250, class: "shadow-sm font-mono focus:ring-emerald-500 focus:border-emerald-500 mt-1 block w-full sm:text-sm border-zinc-300 dark:bg-zinc-800", data: {character_counter_target: "input", action: "character-counter#updateCounter"} %>
            </div>
            <p class="mt-1 text-xs text-zinc-500">
              <span data-character-counter-target="counter">0</span>/250 characters.
            </p>
          </div>
          <div>
            <%= form.label :image, "Image", class: "standard-label" %>
            <% if @change.image.attached? && @change.image.variable? %>
              <%= image_tag @change.image.variant(:social), class: "mt-1" %>
            <% end %>
            <div class="mt-1">
              <%= form.file_field :image %>
            </div>
          </div>
        </div>
      </div>
      <div class=" px-4 py-3 bg-zinc-50 dark:bg-zinc-700 text-right sm:px-6">
        <%= form.submit "Save", class: "cursor-pointer inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500" %>
      </div>
    </div>
  <% end %>
</div>
