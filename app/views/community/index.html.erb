  <div class="px-4 sm:hidden">
    <h1 class="font-serif text-4xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100">
      Community
    </h1>
  </div>
  <%= render "filters" %>
  <%= render "shots/old_list", shots: @shots, pagy: @pagy, include_person: true %>
</div>
